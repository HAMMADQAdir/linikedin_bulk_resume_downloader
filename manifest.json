{
  "manifest_version": 3,
  "name": "LinkedIn Bulk Resume Downloader",
  "version": "1.0.0",
  "description": "Bulk download resumes from LinkedIn Job Applicant pages with human-like delays to avoid detection.",
  "permissions": [
    "downloads",
    "tabs",
    "activeTab",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://*.linkedin.com/*",
    "https://*.licdn.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/hiring/*",
        "https://www.linkedin.com/talent/*",
        "https://www.linkedin.com/jobs/*",
        "https://www.linkedin.com/recruiter/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
